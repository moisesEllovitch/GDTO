<table>
  <thead>
    <tr>
      <th>Institution</th>
      <th>Average</th>
		<% if current_user != nil && current_user.admin? %>
	      <th colspan="1"></th>
	      <th colspan="1"></th>
      	<% end %>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |it| %>
      <tr>
        <td><%= link_to(it.institution, category_item_path(@category, it)) %></td>
        <td align="center">
	      <% if it.average == nil || it.average == 11 %>
	        <%= "--" %>
	      <% else %>
	        <%= it.average %>
	      <% end %>
        </td>
		<% if current_user != nil && current_user.admin? %>
        	<td><%= link_to('Edit', edit_category_item_path(@category, it)) %></td>
        	<td><%= link_to('Destroy', category_item_path(@category, it), method: :delete, data: { confirm: 'Delete this item?' }) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>








