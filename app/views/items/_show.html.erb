<table class="table table-hover text-center" >
  <thead>
    <tr>
      <th colspan="4" class="text-center th_relative">
        <h3>
        <strong>
            <%= @category.name %> - Itens Cadastrados:
        </strong>
        </h3>
        <button type="button" class="links_bottom_th btn-color-head-table btn_size">
          <%= link_to 'Edit', edit_category_path(@category) %>
        </button>
      </th>
    </tr>
    <tr>
      <th class="text-center">Institution</th>
      <th class="text-center">Average</th>
  		<% if current_user != nil && current_user.admin? %>
  	      <th colspan="1"></th>
  	      <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |it| %>
      <tr>
        <td>
          <%= link_to(it.institution, category_item_path(@category, it)) %>
        </td>
        <td>
  	      <% if it.average == nil %>
  	        <%= "--" %>
  	      <% else %>
  	        <%= it.average %>
  	      <% end %>
        </td>

        <% if current_user != nil && current_user.admin? %>
          <td>
            <button class="btn-color-table btn_size">
            <%= link_to('Edit', edit_category_item_path(@category, it)) %>
            </button>
          </td>
          <td>
            <button class="btn-color-table btn_size">
            <%= link_to('Destroy', category_item_path(@category, it), method: :delete, data: { confirm: 'Delete this item?' }) %>
            </button>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
