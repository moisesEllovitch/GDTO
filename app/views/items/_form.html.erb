<%= form_for(([@category, @item]),html:{class:'form-horizontal', type:'form'}) do |f| %>

  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.label :category, class:"control-label col-lg-2 col-md-2 col-sm-2 col-xs-2" %>
    <label class="control-label col-lg-1 col-md-1 col-sm-1 col-xs-1">
      <%= @category.name %>
    </label>
  </div>
  <div class="form-group field">
    <%= f.label :institution, class:"control-label col-lg-2 col-md-2 col-sm-2 col-xs-2" %>
    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
      <%= f.text_field :institution, class:"form_campo_color" %>
    </div>
  </div>
  <div class="form-group actions">
    <div class="col-lg-offset-2 col-lg-10 col-md-offset-2 col-md-10 col-sm-offset-2 col-sm-10 col-xs-offset-2 col-xs-10">
      <%= f.submit %>
    </div>
  </div>
<% end %>