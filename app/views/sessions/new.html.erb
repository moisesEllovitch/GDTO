<% provide(:title, "Login") %>
<h3 class="title">
  <strong>
    Login
  </strong>
</h3>

<span class="text-danger">
  <%= flash[:notice] if flash[:notice] %>
</span>

<%= form_for(:session, url: login_path, html: {class:'form-horizontal'}, role:"form") do |f| %>
  <div class="form-group field">
      <%= f.label :email, class:"control-label col-lg-2 col-md-2 col-sm-2 col-xs-2" %>
    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
      <%= f.text_field :email, class:"form-control form_campo_color", id:"email", placeholder:"Enter email" %>
    </div>
  </div>

  <div class="form-group field">
      <%= f.label :password, class:"control-label col-lg-2 col-md-2 col-sm-2 col-xs-2" %>
    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
    <%= f.password_field :password, type:"password", class:"form-control form_campo_color", id:"pwd", placeholder:"Enter password" %>
    </div>
  </div>

  <div class="form-group checkbox">
    <%= f.label :remember_me, class:"col-lg-offset-2 col-lg-10 col-md-offset-2 col-md-10 col-sm-offset-2 col-sm-10 col-xs-offset-2 col-xs-10" do %>
    <%= f.check_box :remember_me, type:"checkbox"  %>
      <span>Remember me on this computer</span>
    <% end %>
  </div>

  <div class="form-group actions">
      <div class="col-lg-offset-2 col-lg-10 col-md-offset-2 col-md-10 col-sm-offset-2 col-sm-10 col-xs-offset-2 col-xs-10 btn_size">
         <%= f.submit "Login" %>
      </div>
  </div>
<% end %>

<span class="links_bottom_page btn_size">New user? <%= link_to "Sign up now!", new_user_path %></span>