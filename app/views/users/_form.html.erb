<%= form_for(@user, html: {class:'form-horizontal'}, role:"form") do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.label :email, class:"control-label col-md-2" %>
    <div class="col-md-5">
    <%= f.text_field :email, class:"form-control form_campo_color", id:"email", placeholder:"Enter email" %>
    </div>
  </div>
  <div class="form-group field">
    <%= f.label :password, class:"control-label col-md-2" %>
    <div class="col-md-5">
    <%= f.password_field :password, type:"password", class:"form-control form_campo_color", id:"pwd", placeholder:"Enter password" %>
    </div>
  </div>
  <div class="form-group field">
    <%= f.label :confirmation, class:"control-label col-md-2" %>
    <div class="col-md-5">
    <%= f.password_field :password_confirmation, type:"password", class:"form-control form_campo_color", id:"pwd", placeholder:"Confirm password" %>
    </div>
  </div>
  <div class="form-group actions">
    <div class="col-md-offset-2 col-md-10">
     <%= f.submit "Submit" %>
    </div>
  </div>
<% end %>
