<%= form_for([@category, @item, @comment], html:{class:'form-horizontal'}, role:"form") do |f| %>
	<div class="form-group field">
		<%= f.label :score, class:"control-label" %> (0 - 10)
		<%= f.number_field :score, class:"form-control form_campo_color form_score" %> 
	</div>
	<div class="form-group field">
		<%= f.label :body, class:"control-label" %>
		<%= f.text_area :body, class:"form-control form_campo_color new_comment_box" %>
	</div>
	<div class="form-group actions">
		<%= f.submit %>
	</div>
<% end %>