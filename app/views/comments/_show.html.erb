<% if !@comments.any? %>
	<p>Be the first to comment!</p>
<% else %>
	<div class="bg-comments">
	<% @comments.each do |co| %>
		<div class="comments">
			<div class="container-fluid ">
				<div class="row-fluid">
					<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
						<strong>Score:</strong>
					</div>
					<div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
						<%= co.score %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
						<strong>Body:</strong>
					</div>
					<div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
						<%= co.body %>
					</div>
				</div>
			</div>
			<% if current_user != nil && current_user.admin? %>
			<div class="container-fluid btn-categories">
			<div class="row-fluid">
				<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
					<button type="button" class="btn-color-div btn_size">
						<%= link_to 'Edit', edit_category_item_comment_path(@category, @item, co) %>
					</button>
				</div>
				<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
					<button type="button" class="btn-color-div btn_size">
						<%= link_to 'Destroy', category_item_comment_path(@category, @item, co), method: :delete, data: { confirm: 'Are you sure?' } %>
					</button>
				</div>				
			</div>
			</div>
			<% end %>
		</div>
	<% end %>
</div>
<% end %>


